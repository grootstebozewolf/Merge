<?xml version="1.0" encoding="utf-8" ?> 
<!-- FieldVision Communication configuration file -->
<!-- Created on 30-08-2004 -->
<!-- Updated on 16-06-2006 -->
<!-- Updated on 19-11-2007 -->
<config>
	<general>
		<server-id>0</server-id>
		<server-name>FV</server-name>
		<add-server-name>no</add-server-name>
	</general>
	<communications>
		<type>LAN</type>						<!-- LAN for communication over Lan, GPRS for communication over GPRS -->
		<poll-interval>300</poll-interval>		<!-- the interval in seconds elapses between checks for network (GPRS) availability -->
		<poll-delay>30</poll-delay>				<!-- seconds to wait after a power-on before a connection is made -->
		<poll-attempts>3</poll-attempts>		<!-- number of unsuccesfull GPRS reconnect attempts before the modem is switched off/on -->
												<!-- set this value to 0 to disable the modem power off/on toggling -->
		<send-attempts>2</send-attempts>		<!-- number of times we try to send a message before we assume the client is out of coverage -->
												<!-- This is only used with messages generated by the client that have the -->
												<!-- "Non-Delivery Response" ("N") option is set -->
		<resend-interval>1</resend-interval>	<!-- minutes we wait before we send a message after a send failure -->
		<network>IP</network>					<!-- name of the network specific section in use -->
		<connect>RAS</connect>					<!-- RAS : use Ras, CONMGR :  use Connection Manager (only valid on the PDA) -->
	</communications>
	<RAS>
      <dun-name>GPRS</dun-name>
   </RAS>
	<polling>
		<login>on</login>						<!-- on: keep attempting to logon after the first logon, until succesful -->
		<login-interval>30</login-interval>		<!-- interval in seconds between the logon attempts -->
		<get-mail>on</get-mail>					<!-- on: keep sending getmails after succesful logon -->
		<get-mail-interval>30</get-mail-interval> <!-- interval in seconds between the getmail requests -->
	</polling>
	<IP>
		<server-port>5320</server-port>
		<server-ip>190.1.1.51</server-ip>
		<client-port>5320</client-port>
		<client-ip-any>yes</client-ip-any>
	</IP>
	<msq>
		<delivery-opt>BD</delivery-opt>			<!--	B enable notifications
														D enable notification to application when message is delivered
														N enable notification to application when message is NOT delivered -->
		<max-msg-count>5</max-msg-count>		<!-- the maximum number of messages that are in progress for a client at one time -->
	</msq>
	<filesystem>
		<tmp-dir>C:\Tensing\transporter\tmp</tmp-dir>
		<in-dir>C:\Tensing\transporter\Queues\IN</in-dir>
		<out-dir>C:\Tensing\transporter\Queues\OUT</out-dir>
		<log-dir>C:\Tensing\transporter\log</log-dir>
	</filesystem>
	<logfiles>
		<log-lines>1000</log-lines>			<!-- Maximum number of lines in one logfile -->
		<log-level>0</log-level>			<!-- level 0: no logging, 5: maximum logging -->
		<log-files>20</log-files>			<!-- Maximum number of files to keep -->
		<log-showlevel>no</log-showlevel>	<!-- Show level next to log entry -->
	</logfiles>
</config>

